<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    tools:context="com.joseadilson.resultado_loterias.fragments.DuplaSenaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:src="@drawable/duplasena"/>

            <TextView
                android:id="@+id/tvConcursoDuplaSena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#660000"
                android:textSize="16dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="1dp"
            android:background="#CCC"/>

        <TextView
            android:id="@+id/tvDataDuplaSena"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/tvLocalDuplaSena"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCidadeUFDuplaSena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvSorteiEspecialDuplaSena"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="14dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_height="1dp"
            android:background="#CCC"/>

        <!--Primeiro Sorteio-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="1º Sorteio"/>

        <TextView
            android:id="@+id/tvGanhadoresDuplaSena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:background="@drawable/textview_design_duplasena"
            android:gravity="center"/>


        <TextView
            android:id="@+id/tvOrdemSorteioDuplaSena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickOrdemSorteio"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="2dp"
            android:text="Ver números na ordem do sorteio"
            android:gravity="center"
            android:textColor="#0000FF"/>

        <!--Segundo Sorteio-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="2º Sorteio"/>

        <TextView
            android:id="@+id/tvGanhadoresSegundoDuplaSena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:background="@drawable/textview_design_duplasena"
            android:gravity="center"/>


        <TextView
            android:id="@+id/tvOrdemSegundoSorteioDuplaSena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickOrdemSorteio"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="2dp"
            android:text="Ver números na ordem do sorteio"
            android:gravity="center"
            android:textColor="#0000FF"/>


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="1dp"
            android:background="#CCC"/>


        <TextView
            android:id="@+id/tvProximoDataDuplaSena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvProximoEstimativaDuplaSena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="4dp"/>

    </LinearLayout>





</ScrollView>
